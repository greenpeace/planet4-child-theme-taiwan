<footer>
	<div class="footer-upper">
		<div class="ct-container">
			<div class="footer-greenpeace">
				<p>
					{% if (fn('get_locale') matches '{^zh(_[A-Z]+)?$}') %}
					<img data-src="{{ theme.link }}/static/images/logo_zh_green.svg" class="footer-greenpeace__logo footer-greenpeace__logo--zh lazy" />
					{% else %}
					<img data-src="{{ theme.link }}/static/images/logo_ko_green.svg" class="footer-greenpeace__logo footer-greenpeace__logo--ko lazy" />
					{% endif %}
				</p>
				<p>{{ generic_footer_text ? generic_footer_text|raw|nl2br : '綠色和平是獨立的國際環保組織，通過科學研究、政策倡議及和平行動，揭露全球環境問題並提出相應解決方案。我們從不接受任何政府、企業或政治團體的資助，只接受個人的直接捐款，以維持公正獨立。' }}</p>
			</div>
			<div class="quick-links">
				<h5>{{ strings.quick_links }}</h5>
				<ul>
					{% for item in footer_primary_menu %}
						<li><a href="{{ item.url }}">{{ item.title }}</a></li>
					{% endfor %}
				</ul>
			</div>
			<!-- .desktop-only -->
			<!-- .mobile-only -->
			<div class="has-social-links">
				<h5>{{ strings.follow }}</h5>
				<ul class="social-links">
					{% for item in footer_social_menu %}
						<li><a href="{{ item.url }}" aria-label="{{ item.title|lower }}"><span class="icon-{{ item.title|lower }}"></span></a></li>
					{% endfor %}
				</ul>
			</div>
			{% include 'countries.twig' %}
		</div>
	</div>
	<div class="footer-lower">
		<div class="ct-container">
			<hr />
			<ul class="secondary-links">
				{% for item in footer_secondary_menu %}
					<li><a href="{{ item.url }}">{{ item.title }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
</footer>

<script>
	var gpeaSiteHome = '{{ gpea_site_base }}';
</script>

{% if (kakao_app_id) %}
<script src="https://secured-static.greenpeace.org/korea/Global/korea/DD/170519_DDpage/js/kakao.min.js"></script>
<script type='text/javascript'>
	Kakao.init('{{ kakao_app_id }}');
	if (document.getElementById('kakao-link-btn')) {
		Kakao.Link.createScrapButton({
			container: '#kakao-link-btn',
			requestUrl: '{{ home_url }}'
		});
	}
</script>
{% endif %}
<script>
if (navigator.share) {

	var shareButton = document.querySelectorAll('.floating-share-icon.navigator');

	shareButton[0].addEventListener("click", function(){
		navigator.share({
			title: "{{ og_title|raw }}",
			// text: "{{ og_description|e('esc_js')|raw }}",
			url: "{{ post.link|e('esc_url') }}",
		});
	});

}
</script>
